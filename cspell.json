{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "dictionaries": [
    "en",
    "python",
    "typescript",
    "html",
    "css",
    "scientific-terms",
    "@cspell/dict-people-names",
    "ignore-words"
  ],
  "dictionaryDefinitions": [
    {
      "name": "ignore-words",
      "path": ".ignore_words.txt",
      "addWords": true
    }
  ],
  "languageSettings": [
    {
      "languageId": "markdown",
      "locale": "en",
      "dictionaries": ["en", "@cspell/dict-people-names", "ignore-words"]
    },
    {
      "languageId": "html",
      "locale": "en",
      "dictionaries": [
        "en",
        "html",
        "css",
        "scientific-terms",
        "@cspell/dict-people-names",
        "ignore-words"
      ]
    },
    {
      "languageId": "css",
      "locale": "en",
      "dictionaries": ["en", "css", "ignore-words"]
    },
    {
      "languageId": "javascript",
      "locale": "en",
      "dictionaries": [
        "en",
        "typescript",
        "@cspell/dict-people-names",
        "ignore-words"
      ]
    },
    {
      "languageId": "typescript",
      "locale": "en",
      "dictionaries": [
        "en",
        "typescript",
        "@cspell/dict-people-names",
        "ignore-words"
      ]
    },
    {
      "languageId": "json",
      "locale": "en",
      "dictionaries": ["en", "ignore-words"]
    },
    {
      "languageId": "python",
      "locale": "en",
      "dictionaries": [
        "en",
        "python",
        "scientific-terms",
        "@cspell/dict-people-names",
        "ignore-words"
      ]
    },
    {
      "languageId": "*",
      "locale": "en",
      "dictionaries": ["en", "@cspell/dict-people-names", "ignore-words"]
    }
  ],
  "ignorePaths": [
    ".gitignore",
    "node_modules/**",
    ".ignore_words.txt",
    "**/dist/**",
    ".pre-commit-config.yaml",
    ".github/workflows/*.yml"
  ],
  "ignoreRegExpList": [
    "np(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)+",
    "scipy(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)+",
    "plt(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)+"
  ]
}
